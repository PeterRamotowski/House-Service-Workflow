{% extends 'base.html.twig' %}

{% block title %}
    {{ 'nav.service_requests'|trans }}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ 'nav.service_requests'|trans }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            {% if is_granted('ROLE_MANAGER') %}
                <a href="{{ path('app_service_request_new') }}" class="btn btn-sm btn-success">
                    <i class="bi bi-plus-circle"></i>
                    {{ 'action.create_new'|trans }}
                </a>
            {% endif %}
        </div>
    </div>

    {% if is_granted('ROLE_CLEANER') and not is_granted('ROLE_MANAGER') %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            {{ 'service_request.available_tasks_info'|trans }}
        </div>
    {% endif %}

    {% if service_requests is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            {{ 'service_request.no_requests_found'|trans }}
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>{{ 'common.id'|trans }}</th>
                        <th>{{ 'service_request.field.house'|trans }}</th>
                        <th>{{ 'service_request.field.service_type'|trans }}</th>
                        <th>{{ 'service_request.field.scheduled_date'|trans }}</th>
                        <th>{{ 'service_request.field.status'|trans }}</th>
                        <th>{{ 'service_request.field.assigned_cleaner'|trans }}</th>
                        <th>{{ 'service_request.field.priority'|trans }}</th>
                        <th>{{ 'common.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for request in service_requests %}
                        {% set isAvailable = request.currentPlace == 'scheduled' and request.assignedCleaner is null %}
                        <tr class="{% if isAvailable and is_granted('ROLE_CLEANER') and not is_granted('ROLE_MANAGER') %}table-success{% endif %}">
                            <td>{{ request.id }}</td>
                            <td>
                                {{ request.house.name }}
                                {% if isAvailable and is_granted('ROLE_CLEANER') and not is_granted('ROLE_MANAGER') %}
                                    <span class="badge bg-success ms-1">{{ 'service_request.available'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>{{ ('service.type.' ~ request.serviceType)|trans }}</td>
                            <td>{{ request.scheduledDate|date('Y-m-d H:i') }}</td>
                            <td>
                                <span class="badge workflow-badge
                                    {% if request.currentPlace == 'completed' %}bg-success
                                    {% elseif request.currentPlace == 'in_progress' %}bg-warning text-dark
                                    {% elseif request.currentPlace in ['scheduled', 'assigned'] %}bg-primary
                                    {% elseif request.currentPlace == 'review' %}bg-info text-dark
                                    {% elseif request.currentPlace == 'cancelled' %}bg-danger
                                    {% else %}bg-secondary{% endif %}">
                                    {{ ('workflow.state.' ~ request.currentPlace)|trans }}
                                </span>
                            </td>
                            <td>
                                {% if request.assignedCleaner %}
                                    {{ request.assignedCleaner.fullName }}
                                {% elseif isAvailable %}
                                    <span class="text-muted fst-italic">{{ 'service_request.unassigned'|trans }}</span>
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge
                                    {% if request.priority == 'urgent' %}bg-danger
                                    {% elseif request.priority == 'high' %}bg-warning text-dark
                                    {% else %}bg-secondary{% endif %}">
                                    {{ ('priority.' ~ request.priority)|trans }}
                                </span>
                            </td>
                            <td>
                                <a href="{{ path('app_service_request_show', {'id': request.id}) }}" class="btn btn-sm {% if isAvailable and is_granted('ROLE_CLEANER') and not is_granted('ROLE_MANAGER') %}btn-success{% else %}btn-outline-primary{% endif %}">
                                    <i class="bi {% if isAvailable and is_granted('ROLE_CLEANER') and not is_granted('ROLE_MANAGER') %}bi-hand-thumbs-up{% else %}bi-eye{% endif %}"></i>
                                    {% if isAvailable and is_granted('ROLE_CLEANER') and not is_granted('ROLE_MANAGER') %}
                                        {{ 'action.take_task'|trans }}
                                    {% else %}
                                        {{ 'action.view'|trans }}
                                    {% endif %}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
