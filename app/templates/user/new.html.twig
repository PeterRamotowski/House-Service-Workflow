{% extends 'base.html.twig' %}

{% block title %}
    {{ 'user.new.title'|trans }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-md-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_user_index') }}">{{ 'user.title'|trans }}</a>
                        </li>
                        <li class="breadcrumb-item active">{{ 'user.new.breadcrumb'|trans }}</li>
                    </ol>
                </nav>
                <h1>{{ 'user.new.header'|trans }}</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.firstName) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.lastName) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.phone) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.plainPassword) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.roles) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.isActive) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i>
                                {{ 'action.back_to_list'|trans }}
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i>
                                {{ 'user.action.create'|trans }}
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
