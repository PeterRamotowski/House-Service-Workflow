{% extends 'base.html.twig' %}

{% block title %}
    {{ 'house.edit'|trans }}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ 'house.edit'|trans }}
            {{ house.name }}</h1>
        <a href="{{ path('app_house_show', {'id': house.id}) }}" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            {{ 'action.back_to_details'|trans }}
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.address) }}
                    {{ form_row(form.city) }}
                    {{ form_row(form.postalCode) }}
                    {{ form_row(form.country) }}
                    {{ form_row(form.bedrooms) }}
                    {{ form_row(form.bathrooms) }}
                    {{ form_row(form.squareMeters) }}
                    {{ form_row(form.owner) }}
                    {% if is_granted('ROLE_MANAGER') %}
                        {{ form_row(form.owners) }}
                    {% endif %}
                    {{ form_row(form.description) }}

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i>
                            {{ 'house.update'|trans }}
                        </button>
                        <a href="{{ path('app_house_show', {'id': house.id}) }}" class="btn btn-secondary">{{ 'action.cancel'|trans }}</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
